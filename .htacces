RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-d #diretorio
RewriteCond %{REQUEST_FILENAME} !-f #arquivo
RewriteCond %{REQUEST_FILENAME} !-l #link simbólico

#pega todo o conteúdo da url e diz que deve direcionar para index.php
RewriteRule ^(.+)$ index.php?url=$1 [QSA,L]

#configuração para urls amigáveis